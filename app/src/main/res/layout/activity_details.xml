<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/huanjing"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/tptp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/shangjiangxinxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_below="@id/huanjing"
                android:textSize="24dp"
                android:text="商家信息"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/shishixinxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shangjiangxinxi"
                android:layout_marginLeft="20dp"
                android:text="商家地址：青岛市黄岛区青岛职业技术学院\n报名联系方式：12345678998"/>
            <TextView
                android:id="@+id/xian"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000"
                android:layout_below="@id/shishixinxi"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/gongzuoneirong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_below="@id/xian"
                android:textSize="24dp"
                android:text="工作内容"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/shihsineirong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gongzuoneirong"
                android:layout_marginLeft="20dp"
                android:text="工作详情"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shihsineirong"
                android:layout_marginLeft="20dp"
                android:text="【温馨提示】"
                android:textColor="#000"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/shihsitishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tishi"
                android:layout_marginLeft="35dp"
                android:text="干这个活的要求。。。"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/za"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shihsitishi"
                android:layout_marginLeft="20dp"
                android:text="职位：程序员\n招聘人数：100人\n工作时间：12:00-18:00\n¥：100元/天"/>
        </RelativeLayout>


    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textColor="#000000"
            android:background="@drawable/bg_dorder"
            android:gravity="center"
            android:text="收藏"/>
        <TextView
            android:id="@+id/apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_dorder"
            android:backgroundTint="#FFC107"
            android:text="我要报名"/>
    </LinearLayout>

</LinearLayout>